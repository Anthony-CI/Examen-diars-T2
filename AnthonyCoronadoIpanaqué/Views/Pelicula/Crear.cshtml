
@{
    ViewData["Title"] = "Crear";
}
<h1>Crear Pelicula</h1>

<form action="/Pelicula/Crear" method="post">

    <div class="form-group">
        <label>Nombre</label>
        <input type="text" class="form-control" name="Nombre" value="@Model.Nombre" />
        @Html.ValidationMessage("Nombre")
    </div>

    <div class="form-group">
        <label>Directores</label>
        <select class="form-control" name="DirectorId">
            <option value="value">Seleccione Director</option>
            @foreach (var item in ViewBag.Director)
            {
                if (item.IdDirector == Model.DirectorId)
                {
                    <option selected value="@item.IdDirector">@item.Nombre</option>
                }
                else
                {
                    <option value="@item.IdDirector">@item.Nombre</option>
                }

            }
        </select>
        @Html.ValidationMessage("DirectorId")
    </div>

    <div class="form-group">
        <label>Año</label>
        <input type="text" class="form-control" name="Año" value="@Model.Año" />
        @Html.ValidationMessage("Año")
    </div>

    <div class="form-group">
            <label>Imagen</label>
            <input type="text" class="form-control" name="Imagen" value="@Model.Imagen" />
            @Html.ValidationMessage("Imagen")
        </div>

    



    <div class="form-group">
        <button class="btn btn-primary">Guardar</button>
    </div>
    <div class="form-group">
        <a class="btn btn-primary" href="/Pelicula/Index">Cancelar</a>
    </div>
</form>

